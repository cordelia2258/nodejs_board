<!DOCTYPE html>
<html>
  <head>
    <% include ../include/head %>
  </head>
  <body>
    <header>
      <h1 class="text_center">My Board Update</h1>
    </header>
    <div id="wrapper">
        <div id="page-wrapper" class="gray-bg">
          <div class="wrapper wrapper-content animated fadeInRight">
              <div class="row">
                  <div class="col-lg-10">
                      <div class="input-group pull-right">
                        <button type="button" class="btn btn-w-m btn-primary" onclick="location.href='/'">Home</button>
                        <button type="button" class="btn btn-w-m btn-primary" onclick="location.href='/board'">List</button>
                      </div>
                  </div>
              </div>
              <div class="row">
                  <div class="col-lg-10">
                      <div class="ibox float-e-margins">
                          <div class="ibox-content">
                              <form id="form" class="form-horizontal" action="/board" method="post">
                                  <div class="form-group"><label class="col-lg-2 control-label">Title</label>
                                      <div class="col-lg-10 pad_top_5"><input type="text" class="form-control" name="title" value="<%= board.title %>"></div>
                                  </div>
                                  <div class="form-group"><label class="col-lg-2 control-label">Writer</label>
                                      <div class="col-lg-10 pad_top_5"><input type="text" class="form-control" name="writer" value="<%= board.writer %>"></div>
                                  </div>
                                  <div class="form-group"><label class="col-lg-2 control-label">Created</label>
                                      <div class="col-lg-10 pad_top_5"><P><%= board.getCreatedDate() %> <%= board.getCreatedTime() %></P></div>
                                  </div>
                                  <div class="form-group"><label class="col-lg-2 control-label">Contents</label>
                                      <div class="col-lg-10 pad_top_5"><textarea class="form-control" id="contents" name="contents" rows="5" cols="5"><%= board.contents %></textarea></div>
                                  </div>
                              </form>
                          </div>
                      </div>
                  </div>
              </div>
              <div class="row">
                <div class="col-lg-10">
                  <div class="input-group pull-right">
                    <button type="button" class="btn btn-w-m btn-default" id="btn_save">Submit</button>
                  </div>
                </div>
              </div>
          </div>
        </div>
    </div>
    <script language='javascript'>
    //<![CDATA[
      $(document).ready(function () {
        console.log("1 Success");

        $("#btn_save").on('click', function(){
          doSave();
        });
      });

      function doSave(){
          $("#form").attr("action","/board/<%= board._id %>").submit();
      }
    //]]>ï»¿
    </script>
</body>
</html>
