<!DOCTYPE html>
<html>
  <head>
    <% include ../include/head %>
  </head>
  <body>
    <header>
      <h1 class="text_center">My Board View</h1>
    </header>
    <div id="wrapper">
        <div id="page-wrapper" class="gray-bg">
          <div class="wrapper wrapper-content animated fadeInRight">
              <div class="row">
                  <div class="col-lg-10">
                      <div class="input-group pull-right">
                        <button type="button" class="btn btn-w-m btn-primary" onclick="location.href='/'">Home</button>
                        <button type="button" class="btn btn-w-m btn-primary" onclick="location.href='/board'">List</button>
                        <button type="button" class="btn btn-w-m btn-primary" onclick="location.href='/board/boardUpdate/<%= board._id %>'">Update</button>
                        <button type="button" class="btn btn-w-m btn-primary" id="btn_delete">Delete</button>
                      </div>
                  </div>
              </div>
              <div class="row">
                  <div class="col-lg-10">
                      <div class="ibox float-e-margins">
                          <div class="ibox-content">
                              <form class="form-horizontal">
                                  <div class="form-group"><label class="col-lg-2 control-label">Title</label>
                                      <div class="col-lg-10 pad_top_5"><P><%= board.title %></P></div>
                                  </div>
                                  <div class="form-group"><label class="col-lg-2 control-label">Writer</label>
                                      <div class="col-lg-10 pad_top_5"><P><%= board.writer %></P></div>
                                  </div>
                                  <div class="form-group"><label class="col-lg-2 control-label">Created</label>
                                      <div class="col-lg-10 pad_top_5"><P><%= board.getCreatedDate() %> <%= board.getCreatedTime() %></P></div>
                                  </div>
                                  <div class="form-group"><label class="col-lg-2 control-label">Hit</label>
                                      <div class="col-lg-10 pad_top_5"><P><%= board.hit %></P></div>
                                  </div>
                                  <div class="form-group"><label class="col-lg-2 control-label">Contents</label>
                                      <div class="col-lg-10 pad_top_5"><textarea class="form-control" id="contents" name="contents" readonly="true" disabled="true"><%= board.contents %></textarea></div>
                                  </div>
                              </form>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
        </div>
    </div>
    <script language='javascript'>
    //<![CDATA[
      $(document).ready(function () {
        console.log("1 Success");

        $("#btn_delete").on('click', function(){
          doDelete();
        });
      });

      function doDelete(){
          if(confirm("정말 삭제하시겠습니까?")){
            location.href='/board/delete/<%= board._id %>'
          }
      }
    //]]>﻿
    </script>
</body>
</html>
